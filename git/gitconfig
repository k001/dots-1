[user]
	email = $GIT_USER_EMAIL
	name = $GIT_USER_NAME
[alias]
	br = branch
	ci = commit
	co = checkout
	d = difftool
	di = diff --word-diff
	dist = diff --stat
	files = ls-files
	graph = log --graph --oneline --decorate
	last = log -n 1 -s --decorate
	hist = log --stat --graph --oneline --decorate --date=short
	graph = log --color --graph --pretty=format:'%C(bold yellow)%h %C(bold red)%d%Creset %s %Cgreen(%cr) %C(magenta)<%an>%Creset' --abbrev-commit
	orp = checkout --orphan
	st = status --short -sb
	stats = shortlog -e -s -m
	tr = checkout --track -b
	tree = ls-tree -r HEAD
[color]
	ui = always
[log]
	decorate = short
	abbrevCommit = true
[pager]
	status = true
	show-branch = true
[push]
	default = current
[core]
	editor = vim
	quotepath = false
	excludesfile = ~/.gitignore_global
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[difftool]
	prompt = false
